        <Button x:Name="exit" Content="Выйти из программы" Margin="10,0,10,10" VerticalAlignment="Bottom" Click="exit_Click"/>
        <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="23,0,0,127" VerticalAlignment="Bottom" Width="75" Click="button1_Click"/>
        <Button x:Name="button2" Content="Button" HorizontalAlignment="Left" Margin="169,0,0,127" VerticalAlignment="Bottom" Width="75" Click="button2_Click"/>

    </Grid>
</Window>